{% extends "index.html" %}

{% block nav_java %}
<script>
function openLink(evt, animName) {
  var i, x, tablinks;
  x = document.getElementsByClassName("type");
  for (i = 0; i < x.length; i++) {
     x[i].style.display = "none";
  }
  tablinks = document.getElementsByClassName("tablink");
  document.getElementById(animName).style.display = "block";
  
}
</script>
{%endblock%}

{% block new_nav %}
<div class="w3-sidebar w3-bar-block w3-black w3-card-2" style="width:130px">
  <h5 class="w3-bar-item">Fraud types</h5>
  <button class="w3-bar-item w3-button tablink" onclick="openLink(event, 'from')">Hacked users</button>
  <button class="w3-bar-item w3-button tablink" onclick="openLink(event, 'to')">Thiefs</button>
 </div> 
{% endblock%}
